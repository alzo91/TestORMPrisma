{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@configs/*": ["configs/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@database/*": ["shared/database/*"],
      "@utils/*": ["shared/utils/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": false
  }
}
